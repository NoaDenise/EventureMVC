@model EventureMVC.Models.ViewModel.LoginUserViewModel



<h2>Login</h2>

<form asp-action="Login" method="post" id="loginForm">
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" name="Email" required />
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" name="Password" required />
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe" />
        <label class="form-check-label" for="rememberMe">Remember Me</label>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

<div id="errorMessage" class="text-danger"></div>

<!-- Add Register Link -->
<div class="mt-3">
    <p>Don't have an account? <a asp-controller="User" asp-action="Register">Register here</a></p>
</div>

<!-- Guest Login Button -->
<form asp-action="GuestLogin" method="post" class="mt-3">
    <button type="submit" class="btn btn-secondary">Login as Guest</button>
</form>