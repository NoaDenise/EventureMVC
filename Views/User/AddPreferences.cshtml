@using EventureMVC.Models.ViewModel
@model PreferencesViewModel

<h1>Choose Your Preferences</h1>

<form asp-action="AddPreferences" method="post">
    <div>
        <h3>Categories</h3>
        @foreach (var category in Model.Categories)
        {
            <div>
                <input type="checkbox" name="SelectedCategoryIds" value="@category.CategoryId"
                @(Model.SelectedCategoryIds.Contains(category.CategoryId) ? "checked" : "") />
                <label>@category.CategoryName</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Preferences</button>
</form>

<h3>Create New Category</h3>
<form asp-action="CreateCategory" method="post">
    <input type="text" name="categoryName" placeholder="New category name" required />
    <button type="submit" class="btn btn-secondary">Add Category</button>
</form>
