
<h1>Admin Pages</h1>

<div class="list-group">
    <!-- My Information -->
    <a asp-controller="Admin" asp-action="ListAdminInformation" class="list-group-item">
        <i class="fas fa-user-circle"></i> My Information
    </a>

    <!-- Activities to Approve -->
    <a asp-controller="Admin" asp-action="ListActivitiesToApprove" class="list-group-item">
        <i class="fas fa-check-circle"></i> Activities to Approve
    </a>

    <!-- List/Edit/Delete Activities -->
    <a asp-controller="Admin" asp-action="ListAllActivities" class="list-group-item">
        <i class="fas fa-tasks"></i> List/Edit/Delete Activities
    </a>

    <!-- List/Create/Edit/Delete Categories -->
    <a asp-controller="Admin" asp-action="ListAllCategories" class="list-group-item">
        <i class="fas fa-tags"></i> List/Create/Edit/Delete Categories
    </a>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
