@model Category

<h4>Edit Category</h4>

<form method="post" asp-action="EditCategory">


    <input type="hidden" asp-for="CategoryId" />


    <div class="form-group">
        <label asp-for="CategoryName">Name</label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryDescription">Description</label>
        <input asp-for="CategoryDescription" class="form-control" />
        <span asp-validation-for="CategoryDescription" class="text-danger"></span>
    </div>

    <button type="submit" class="button">Save</button>
    <a asp-action="ListAllCategories" class="button">Cancel</a>
</form>
