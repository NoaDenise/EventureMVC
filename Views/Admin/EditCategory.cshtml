@model Category

<h1>Edit Category</h1>

<form method="post" asp-action="EditCategory">

    <div class="form-group">
        <label asp-for="CategoryName">Name</label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryDescription">Description</label>
        <input asp-for="CategoryDescription" class="form-control" />
        <span asp-validation-for="CategoryDescription" class="text-danger"></span>
    </div>


    <input type="hidden" asp-for="CategoryId" />

    <button type="submit" class="button">Submit</button>
    <a asp-action="ListAllCategories" class="button">Cancel</a>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}