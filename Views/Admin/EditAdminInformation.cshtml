@model EventureMVC.Models.ViewModel.AdminInformationViewModel

<h1>Edit Information</h1>

<form method="post" asp-action="EditAdminInformation">

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">PhoneNumber</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

@*     <input type="hidden" asp-for="Id" />   *@

    <button type="submit" class="button">Submit</button>
    <a asp-action="ListAdminInformation" class="button">Cancel</a>

</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
