@model List<Category>



<div class="container mt-5">
   <h1 class="text-center mb-4 category-card-subject">All Categories</h1>

    <!-- Create New Category Button -->
    <div class="d-flex justify-content-center mb-4">
        <a asp-action="CreateCategory" asp-controller="Admin" class="category-card-Create">
            Create New Category
        </a>
    </div>

    <!-- Categories List -->
    <div class="row category-grid">
        @foreach (var category in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card category-card shadow-sm border-light rounded-3">
                    <div class="card-body category-card-body">
                        <h5 class="card-title category-card-title">@category.CategoryName</h5>                     
                        <p class="card-text category-card-description">@category.CategoryDescription</p>


                        <div class="d-flex justify-content-between mt-3">
                            <!-- Edit Button -->
                            <a asp-controller="Admin" asp-action="EditCategory" asp-route-id="@category.CategoryId"
                               class="btn btn-outline-primary btn-sm w-48">Edit</a>

                            <!-- Delete Button -->
                            <form asp-action="DeleteCategory" method="post" asp-controller="Admin" style="display:inline;">
                                <input type="hidden" name="id" value="@category.CategoryId" />
                                <button type="submit" class="btn btn-outline-danger btn-sm w-48"
                                        onclick="return confirm('Are you sure you want to delete this category?');">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}