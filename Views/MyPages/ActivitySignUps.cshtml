@model List<EventureMVC.Models.UserAttendanceDTO>


@{
    ViewData["Title"] = "Activity Sign-Ups";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">My Activity Sign-Ups</h1>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var activity in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <h3 class="card-title text-primary">@activity.ActivityName</h3>
                            <p class="card-text"><strong>Location:</strong> @activity.ActivityLocation</p>
                            <p class="card-text"><strong>Date:</strong> @(activity.DateOfActivity.HasValue ? activity.DateOfActivity.Value.ToString("yyyy-MM-dd") : "Date not available")</p>

                            <div class="mt-auto">
                                <!-- Form to delete the signup -->
                                <form asp-action="DeleteActivitySignup" method="post" class="mt-3">
                                    <input type="hidden" name="attendanceId" value="@activity.AttendanceId" />
                                    <button type="submit" class="btn btn-danger btn-block">Delete Sign-Up</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center">You have not signed up for any activities yet.</p>
    }
</div>
