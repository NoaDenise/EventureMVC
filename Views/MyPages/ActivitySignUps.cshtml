@model List<EventureMVC.Models.UserAttendanceDTO>

<h1>My Activity Sign-Ups</h1>

@if (Model != null && Model.Any())
{
    foreach (var activity in Model)
    {
        <div class="activity-card">
            <h3>@activity.ActivityName</h3>
            <p>Location: @activity.ActivityLocation</p>
            <p>Date: @(activity.DateOfActivity.HasValue ? activity.DateOfActivity.Value.ToString("yyyy-MM-dd") : "Date not available")</p>

            <!-- Form to delete the signup -->
            <form asp-action="DeleteActivitySignup" method="post">
                <input type="hidden" name="attendanceId" value="@activity.AttendanceId" />
                <button type="submit">Delete</button>
            </form>
        </div>
    }
}
else
{
    <p>You have not signed up for any activities yet.</p>
}
