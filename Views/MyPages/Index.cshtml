@{
    var userId = Context.Session.GetString("nameid");
}

@if (string.IsNullOrEmpty(userId))
{
    <p>You need to be logged in to view this page. <a href="/User/Login">Click here to log in.</a></p>
}
else
{
    <h1>Welcome to My Pages!</h1>

    <div class="list-group">
        <!-- My Information -->
        <a asp-controller="MyPages" asp-action="MyInformation" class="list-group-item list-group-item-action list-group-item-info" aria-label="View your personal information">
            My Information
        </a>

        <!-- Saved Activities -->
        <a asp-controller="MyPages" asp-action="SavedActivities" class="list-group-item list-group-item-action list-group-item-warning" aria-label="View your saved activities">
            Saved Activities
        </a>

        <!-- Activity Sign-Ups -->
        <a asp-controller="MyPages" asp-action="ActivitySignUps" class="list-group-item list-group-item-action list-group-item-primary" aria-label="View your activity sign-ups">
            Activity Sign-Ups
        </a>

        <!-- Edit/Delete Created Activities -->
        <a asp-controller="MyPages" asp-action="EditDeleteCreatedActivities" class="list-group-item list-group-item-action list-group-item-secondary" aria-label="Edit or delete your created activities">
            Edit/Delete Created Activities
        </a>
    </div>
}
