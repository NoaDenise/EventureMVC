@model EventureMVC.Models.ViewModel.MyInformationViewModel

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">My Information</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h5>First Name:</h5>
                    <p class="text-muted">@Model.FirstName</p>
                </div>
                <div class="col-md-6">
                    <h5>Last Name:</h5>
                    <p class="text-muted">@Model.LastName</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h5>Phone Number:</h5>
                    <p class="text-muted">@Model.PhoneNumber</p>
                </div>
                <div class="col-md-6">
                    <h5>Location:</h5>
                    <p class="text-muted">@Model.UserLocation</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h5>User Name:</h5>
                    <p class="text-muted">@Model.UserName</p>
                </div>
                <div class="col-md-6">
                    <h5>E-mail:</h5>
                    <p class="text-muted">@Model.Email</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h5>Password:</h5>
                    <p class="text-muted">Password is hidden for security reasons</p>
                </div>
            </div>

            <div class="text-center mt-4">
            <a asp-controller="MyPages" asp-action="EditMyInformation" class="edit-information-link">
                <i class="bi bi-pencil-fill"></i>Edit Information</a>
            <a asp-controller="MyPages" asp-action="EditUserPassword" class="edit-password-link">
                <i class="bi bi-pencil-fill"></i>Edit Password</a>
                </a>
            </div>
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}
