@model EventureMVC.Models.ViewModel.UserPasswordViewModel

<h4>Edit Password</h4>

<form method="post" asp-action="EditUserPassword">

    <div class="form-group">
        <div class="form-group">
            <label asp-for="CurrentPassword">Current Password</label>
            <input asp-for="CurrentPassword" class="form-control" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPassword">New Password</label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="button">Save</button>
        <a asp-action="MyInformation" class="button">Cancel</a>

</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
