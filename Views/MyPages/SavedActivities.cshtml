@model List<EventureMVC.Models.SavedActivitiesUserDTO>

<h1>Liked Activities</h1>

@if (Model != null && Model.Any())
{
    foreach (var activity in Model)
    {
        <div class="activity-card">
            <h3>@activity.ActivityName</h3>
            <p>Location: @activity.ActivityLocation</p>
            <p>Date: @(activity.DateOfActivity.HasValue ? activity.DateOfActivity.Value.ToString("yyyy-MM-dd") : "Date not available")</p>
            <form asp-action="DeleteSavedActivity" method="post">
                <input type="hidden" name="userEventId" value="@activity.UserEventId" />
                <button type="submit" class="button delete-button"><i class="bi bi-x-circle-fill"></i>Delete</button>
            </form>
        </div>
    }
}
else
{
    <p>No saved activities yet.</p>
}
