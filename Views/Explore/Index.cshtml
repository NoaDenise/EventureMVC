@model EventureMVC.Models.ViewModel.ExploreViewModel

@{
    ViewData["Title"] = "Explore";
}

<h1>Explore Activities!</h1>

<a asp-action="AddActivity" asp-controller="SecondActivity" class="btn btn-outline-primary" style="margin-bottom:1rem">Create New Activity</a>

<form id="filterForm" method="get" action="/Explore/Index">
    <label>
        <input type="checkbox" name="isFree" value="true" @(Model.IsFree ? "checked" : "") /> Free Entry
    </label>
    <label>
        <input type="checkbox" name="is18Plus" value="true" @(Model.Is18Plus ? "checked" : "") /> 18+ Only
    </label>
    <label>
        <input type="checkbox" name="isFamilyFriendly" value="true" @(Model.IsFamilyFriendly ? "checked" : "") /> Family Friendly
    </label>

    <!-- Date filter inputs -->
    <label>
        Start Date: <input type="date" name="startDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
    </label>
    <label>
        End Date: <input type="date" name="endDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
    </label>

    <!-- Location filter input with Datalist for auto-fill -->
    <label>
        Location:
        <input type="text" id="location" name="location" placeholder="Enter location" list="locationsList" autocomplete="off" value="@Model.Location" />
        <datalist id="locationsList">
            @foreach (var country in Model.CountriesWithCities)
            {
                foreach (var city in country.Value)
                {
                    <option value="@city">@city</option>
                }
            }
        </datalist>
    </label>

    <button type="submit">Apply Filter</button>
    <button type="button" onclick="clearFilters()">Clear Filter</button>
</form>

@* Activities list *@
<div id="activities-container" class="list-group">
    @foreach (var activity in Model.Activities)
    {
        <div class="list-group-item flex-column align-items-start activity-item">
            <div class="d-flex w-100 justify-content-between">
                <a href="@Url.Action("Index", "Activity", new { activityId = activity.ActivityId })" class="activity-link w-75 text-decoration-none text-reset">
                    <h5>@activity.ActivityName</h5>
                    <h6>@activity.ActivityLocation</h6>
                    <p>@activity.DateOfActivity?.ToString("f")</p>
                </a>
                <div class="info-buttons">
                    <p>+18 @activity.Is18Plus</p>
                    <p>Family Friendly @activity.IsFamilyFriendly</p>
                    <p>Free @activity.IsFree</p>
                </div>

                @* Heart button for like/dislike *@
                <button type="button" class="btn btn-heart"
                        id="like-button-@activity.ActivityId"
                        onclick="toggleLikeDislike(@activity.ActivityId)">
                    <i id="heart-icon-@activity.ActivityId" class="bi bi-heart heart-icon @(Model.LikedActivities.Contains(activity.ActivityId) ? "liked" : "")"></i>
                </button>


            </div>
        </div>
    }
</div>

<script>
    function clearFilters() {
        window.location.href = '/Explore/Index';
    }

    function toggleLikeDislike(activityId) {
        // Define the URL for toggling like/dislike
        let toggleUrl = `/Explore/LikeActivity?activityId=${activityId}`;
        let heartIcon = document.getElementById(`heart-icon-${activityId}`);
        heartIcon.classList.toggle("liked"); // Toggle the liked class
        // Send the fetch request
        fetch(toggleUrl, {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',  // Identifies this as an AJAX request
                'Content-Type': 'application/json'
            }
        })
    }

</script>
