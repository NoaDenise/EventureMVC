@model IEnumerable<EventureMVC.Models.ViewModel.CommentViewModel>

<table class="table">
    <thead>
        <tr>
            <th>Comment</th>
            <th>Created At</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.CommentText</td>
                <td>@comment.CreatedAt</td>
                <td>@comment.UserName</td>
                <td>
                    <!-- Edit action with hidden activityId -->
                    <a asp-action="Edit" asp-route-commentId="@comment.CommentId" asp-route-activityId="@comment.ActivityId" class="edit-information-link">
                        <i class="bi bi-pencil-fill"></i>Edit</a>

                    <!-- Delete action with hidden activityId -->
                    <form method="post" asp-action="Delete">
                        <input type="hidden" name="commentId" value="@comment.CommentId" />
                        <input type="hidden" name="activityId" value="@ViewData["activityId"]" />
                        <button type="submit" class="button delete-button"><i class="bi bi-x-circle-fill"></i>Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
