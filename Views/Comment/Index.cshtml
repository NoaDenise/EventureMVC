@model IEnumerable<EventureMVC.Models.ViewModel.CommentViewModel>

<table class="table">
    <thead>
        <tr>
            <th>Comment</th>
            <th>Created At</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.CommentText</td>
                <td>@comment.CreatedAt</td>
                <td>@comment.UserName</td>
                <td>
                    <!-- Edit action with hidden activityId -->
                    <a asp-action="Edit" asp-route-commentId="@comment.CommentId" asp-route-activityId="@comment.ActivityId" class="btn btn-primary">Edit</a>

                    <!-- Delete action with hidden activityId -->
                    <form asp-action="Delete" asp-route-commentId="@comment.CommentId" asp-route-activityId="@comment.ActivityId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
